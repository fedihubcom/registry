<div class="container mt-4">
  <div class="row">
    {{#each employees}}
      <div class="col-sm-6 col-lg-4">
        <div class="card mt-4">
          <div class="card-body">
            <h5 class="card-title">
              {{ this.name }}
            </h5>

            <h6 class="card-subtitle text-muted">
              {{ this.role }}
            </h6>
          </div>
        </div>
      </div>
    {{/each}}
  </div>
</div>
